{% extends 'base.jinja2' %}

{% block subtitle %}Create new donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="name">Name:</label><input type="text" id="name" name="name">
    <label for="donation">Donation:</label><input type="number" id="donation" name="donation">
    <input type="submit" value="Donate!">
</form>
{% endblock content %}